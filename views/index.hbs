{{#extends 'base'}}

{{#block 'content'}}
<h1>Movies</h1>
<a href="/actor/create" class="btn btn-primary btn-sm" style="margin-bottom: 1em;">Create New</a>
<table class="table">
    <thead>
        <tr>
            <th>Actor ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Last Update</th>
            <th></th>
        </tr>
    </thead>
    {{#each actors}}
        <tr>
            <td>{{this.actor_id}}</td>
            <td>{{this.first_name}}</td>
            <td>{{this.last_name}}</td>
            <td>{{this.last_update}}</td>
            <td><a href="/actor/{{this.actor_id}}/edit" class="btn btn-primary btn-sm">Edit</a></td>
        </tr>
    {{/each}}
</table>

{{/block}}
{{/extends}}